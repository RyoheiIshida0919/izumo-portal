---
interface Props {
  id: string;
  name: string;
  description: string;
  count?: number;
}

const { id, name, description, count } = Astro.props;
---

<a
  href={`/areas/${id}`}
  class="group block bg-white rounded-xl shadow-sm hover:shadow-md transition-all p-6"
>
  <div class="flex items-center justify-between">
    <div>
      <h3 class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors text-lg">
        {name}
      </h3>
      <p class="text-sm text-gray-500">{description}</p>
    </div>
    <div class="flex items-center gap-2">
      {
        count !== undefined && (
          <span class="text-sm text-primary-600 font-medium">{count}ä»¶</span>
        )
      }
      <svg
        class="w-5 h-5 text-gray-400 group-hover:text-primary-600 transition-colors"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
        ></path>
      </svg>
    </div>
  </div>
</a>
