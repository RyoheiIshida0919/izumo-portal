---
interface Props {
  id: string;
  name: string;
  icon: string;
  description: string;
  count?: number;
}

const { id, name, icon, description, count } = Astro.props;
---

<a
  href={`/categories/${id}`}
  class="group block bg-white rounded-xl shadow-sm hover:shadow-md transition-all p-6 text-center"
>
  <div class="text-4xl mb-3">{icon}</div>
  <h3 class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors mb-1">
    {name}
  </h3>
  <p class="text-sm text-gray-500 mb-2">{description}</p>
  {
    count !== undefined && (
      <span class="text-xs text-primary-600 font-medium">{count}ä»¶</span>
    )
  }
</a>
