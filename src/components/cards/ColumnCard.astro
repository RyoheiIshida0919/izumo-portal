---
import Tag from '../common/Tag.astro';
import { formatDate } from '../../lib/utils';
import { DUMMY_IMAGE_URL } from '../../lib/constants';

interface Props {
  slug: string;
  title: string;
  summary: string;
  category: string;
  tags?: string[];
  thumbnail?: { url: string; alt: string };
  author?: string;
  publishedAt: string;
  isFeatured?: boolean;
}

const {
  slug,
  title,
  summary,
  category,
  tags = [],
  thumbnail,
  author,
  publishedAt,
  isFeatured = false,
} = Astro.props;

const imageUrl = thumbnail?.url || DUMMY_IMAGE_URL;
const imageAlt = thumbnail?.alt || title;

const categoryLabels: Record<string, string> = {
  parenting: '子育てコラム',
  outing: 'お出かけ情報',
  seasonal: '季節の行事',
  health: '健康・発育',
  food: '食事・レシピ',
  other: 'その他',
};

const categoryLabel = categoryLabels[category] || category;
---

<article class="group bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden">
  <a href={`/columns/${slug}`} class="block">
    <div class="relative aspect-[16/9] overflow-hidden">
      <img
        src={imageUrl}
        alt={imageAlt}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
      {
        isFeatured && (
          <span class="absolute top-2 left-2 bg-primary-500 text-white text-xs font-bold px-2 py-1 rounded">
            注目
          </span>
        )
      }
    </div>

    <div class="p-4">
      <div class="flex items-center gap-2 mb-2">
        <Tag label={categoryLabel} variant="secondary" />
      </div>

      <h3 class="font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
        {title}
      </h3>

      <p class="text-sm text-gray-600 line-clamp-2 mb-3">{summary}</p>

      <div class="flex items-center justify-between text-sm text-gray-500">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          {formatDate(publishedAt)}
        </span>
        {
          author && (
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                />
              </svg>
              {author}
            </span>
          )
        }
      </div>
    </div>
  </a>
</article>
