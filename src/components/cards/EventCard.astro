---
import Tag from '../common/Tag.astro';
import { getAreaName } from '../../content/_meta';
import { formatDate, formatDateShort } from '../../lib/utils';
import { DUMMY_IMAGE_URL } from '../../lib/constants';

interface Props {
  slug: string;
  title: string;
  summary: string;
  area: string;
  startAt: string;
  endAt?: string;
  venue?: string;
  images: { url: string; alt: string }[];
  isFeatured?: boolean;
}

const { slug, title, summary, area, startAt, endAt, venue, images, isFeatured = false } =
  Astro.props;
const imageUrl = images[0]?.url || DUMMY_IMAGE_URL;
const imageAlt = images[0]?.alt || title;

const startDate = new Date(startAt);
const month = startDate.toLocaleDateString('ja-JP', { month: 'short' });
const day = startDate.getDate();
---

<article class="group bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden">
  <a href={`/events/${slug}`} class="block">
    <div class="relative aspect-[4/3] overflow-hidden">
      <img
        src={imageUrl}
        alt={imageAlt}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
      {
        isFeatured && (
          <span class="absolute top-2 left-2 bg-primary-500 text-white text-xs font-bold px-2 py-1 rounded">
            注目
          </span>
        )
      }
      <div class="absolute top-2 right-2 bg-white rounded-lg p-2 text-center shadow-md">
        <div class="text-xs text-gray-500">{month}</div>
        <div class="text-xl font-bold text-primary-600">{day}</div>
      </div>
    </div>

    <div class="p-4">
      <div class="flex items-center gap-2 mb-2">
        <Tag label={getAreaName(area)} variant="primary" />
      </div>

      <h3 class="font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
        {title}
      </h3>

      <p class="text-sm text-gray-600 line-clamp-2 mb-3">{summary}</p>

      <div class="flex items-center gap-4 text-sm text-gray-500">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          {formatDateShort(startAt)}
          {endAt && ` - ${formatDateShort(endAt)}`}
        </span>
        {
          venue && (
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                />
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                />
              </svg>
              <span class="truncate max-w-24">{venue}</span>
            </span>
          )
        }
      </div>
    </div>
  </a>
</article>
