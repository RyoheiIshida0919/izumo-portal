---
interface EventData {
  slug: string;
  title: string;
  startAt: string;
  endAt?: string;
}

interface Props {
  events: EventData[];
  currentYear: number;
  currentMonth: number;
}

const { events, currentYear, currentMonth } = Astro.props;

// カレンダー生成のためのヘルパー関数
const getDaysInMonth = (year: number, month: number) => {
  return new Date(year, month + 1, 0).getDate();
};

const getFirstDayOfMonth = (year: number, month: number) => {
  return new Date(year, month, 1).getDay();
};

const daysInMonth = getDaysInMonth(currentYear, currentMonth);
const firstDay = getFirstDayOfMonth(currentYear, currentMonth);

// カレンダーの週配列を生成
const weeks: (number | null)[][] = [];
let currentWeek: (number | null)[] = [];

// 最初の週の空白を埋める
for (let i = 0; i < firstDay; i++) {
  currentWeek.push(null);
}

// 日付を埋める
for (let day = 1; day <= daysInMonth; day++) {
  currentWeek.push(day);
  if (currentWeek.length === 7) {
    weeks.push(currentWeek);
    currentWeek = [];
  }
}

// 最後の週の残りを埋める
if (currentWeek.length > 0) {
  while (currentWeek.length < 7) {
    currentWeek.push(null);
  }
  weeks.push(currentWeek);
}

// 日付ごとのイベントをマッピング
const eventsByDay: Record<number, EventData[]> = {};
events.forEach((event) => {
  const startDate = new Date(event.startAt);
  if (
    startDate.getFullYear() === currentYear &&
    startDate.getMonth() === currentMonth
  ) {
    const day = startDate.getDate();
    if (!eventsByDay[day]) {
      eventsByDay[day] = [];
    }
    eventsByDay[day].push(event);
  }
});

const monthNames = [
  '1月', '2月', '3月', '4月', '5月', '6月',
  '7月', '8月', '9月', '10月', '11月', '12月',
];

const dayNames = ['日', '月', '火', '水', '木', '金', '土'];

// 前月・次月のリンク用
const prevMonth = currentMonth === 0 ? 11 : currentMonth - 1;
const prevYear = currentMonth === 0 ? currentYear - 1 : currentYear;
const nextMonth = currentMonth === 11 ? 0 : currentMonth + 1;
const nextYear = currentMonth === 11 ? currentYear + 1 : currentYear;

const today = new Date();
const isToday = (day: number) =>
  today.getFullYear() === currentYear &&
  today.getMonth() === currentMonth &&
  today.getDate() === day;
---

<div class="bg-white rounded-xl shadow-sm p-4 lg:p-6">
  <!-- カレンダーヘッダー -->
  <div class="flex items-center justify-between mb-4">
    <a
      href={`/events?view=calendar&year=${prevYear}&month=${prevMonth + 1}`}
      class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
      aria-label="前月"
    >
      <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </a>
    <h2 class="text-xl font-bold text-gray-900">
      {currentYear}年 {monthNames[currentMonth]}
    </h2>
    <a
      href={`/events?view=calendar&year=${nextYear}&month=${nextMonth + 1}`}
      class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
      aria-label="次月"
    >
      <svg class="w-5 h-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>

  <!-- 曜日ヘッダー -->
  <div class="grid grid-cols-7 mb-2">
    {dayNames.map((day, index) => (
      <div
        class:list={[
          'text-center text-sm font-medium py-2',
          index === 0 ? 'text-red-500' : index === 6 ? 'text-blue-500' : 'text-gray-600',
        ]}
      >
        {day}
      </div>
    ))}
  </div>

  <!-- カレンダー本体 -->
  <div class="grid grid-cols-7 gap-1">
    {weeks.flat().map((day, index) => {
      const dayOfWeek = index % 7;
      const hasEvents = day !== null && eventsByDay[day];
      const dayEvents = day !== null ? eventsByDay[day] || [] : [];

      return (
        <div
          class:list={[
            'min-h-[80px] lg:min-h-[100px] p-1 border rounded-lg',
            day === null ? 'bg-gray-50 border-transparent' : 'border-gray-200',
            day !== null && isToday(day) ? 'bg-primary-50 border-primary-300' : '',
          ]}
        >
          {day !== null && (
            <>
              <div
                class:list={[
                  'text-sm font-medium mb-1',
                  dayOfWeek === 0 ? 'text-red-500' : dayOfWeek === 6 ? 'text-blue-500' : 'text-gray-700',
                  isToday(day) ? 'text-primary-600 font-bold' : '',
                ]}
              >
                {day}
              </div>
              <div class="space-y-1">
                {dayEvents.slice(0, 2).map((event) => (
                  <a
                    href={`/events/${event.slug}`}
                    class="block text-xs bg-primary-100 text-primary-700 rounded px-1 py-0.5 truncate hover:bg-primary-200 transition-colors"
                    title={event.title}
                  >
                    {event.title}
                  </a>
                ))}
                {dayEvents.length > 2 && (
                  <span class="block text-xs text-gray-500 px-1">
                    +{dayEvents.length - 2}件
                  </span>
                )}
              </div>
            </>
          )}
        </div>
      );
    })}
  </div>

  <!-- 凡例 -->
  <div class="mt-4 flex items-center gap-4 text-sm text-gray-600">
    <div class="flex items-center gap-1">
      <span class="w-3 h-3 bg-primary-100 rounded"></span>
      <span>イベントあり</span>
    </div>
    <div class="flex items-center gap-1">
      <span class="w-3 h-3 bg-primary-50 border border-primary-300 rounded"></span>
      <span>今日</span>
    </div>
  </div>
</div>
