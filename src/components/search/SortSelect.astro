---
interface Props {
  value?: string;
}

const { value = 'newest' } = Astro.props;

const options = [
  { value: 'newest', label: '新しい順' },
  { value: 'popular', label: '人気順' },
];
---

<div class="flex items-center gap-2">
  <label class="text-sm text-gray-600">並び替え:</label>
  <select
    name="sort"
    class="h-9 px-3 text-sm rounded-lg border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none"
  >
    {options.map((option) => (
      <option value={option.value} selected={option.value === value}>
        {option.label}
      </option>
    ))}
  </select>
</div>
